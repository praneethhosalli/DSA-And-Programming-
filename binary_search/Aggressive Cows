class Solution:

    def canWePlace(self , arr  , dist , k   ):
        cntCows = 1 
        last = nums[0]

        for i in range ( 1 , len(arr)):
            if arr[i] - last >= dist :
                cntCows +=1 
                last = arr[i]

            if cntCows >= k :
                return True 
            
        return False 

    def aggressiveCows(self, nums, k):

        nums.sort()

        limit = nums[-1] - nums[0]

        for i in range( 1 , limit + 1 ):

            if not self.canWePlace(nums , i , k ):
                return i-1 

        return limit

            
        

        
