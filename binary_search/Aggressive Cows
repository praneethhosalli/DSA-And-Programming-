class Solution:

    def canWePlace(self , arr  , dist , k   ):
        cntCows = 1 
        last = nums[0]

        for i in range ( 1 , len(arr)):
            if arr[i] - last >= dist :
                cntCows +=1 
                last = arr[i]

            if cntCows >= k :
                return True 
            
        return False 


    def aggressiveCows(self, nums, k):

        nums.sort()

        limit = nums[-1] - nums[0]

        left = 1 
        right = limit 

        while(left<=right):
            mid = (left + right  ) // 2 
            if not self.canWePlace(nums , mid , k ):
                right = mid -1 
            else :
                left = mid + 1


        return left -1 

            
        

        
