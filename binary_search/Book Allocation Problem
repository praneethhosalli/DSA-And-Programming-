class Solution:

    def countStudents (self , nums ,pages ):
        student = 1 
        pagesStudent = 0 

        for i in range(len(nums )):
            if nums[i] + pagesStudent <= pages :
                pagesStudent += nums[i]
            else :
                pagesStudent = nums[i]
                student +=1 

        return student 


    def findPages(self, nums, m):

        if m > len(nums):
            return -1 

        low = max(nums )

        high = sum(nums)

        while(low<=high):
            mid  = (low + high ) // 2

            if self.countStudents(nums  , mid  ) <= m :
                high = mid -1
            else :
                low = mid + 1

        return low 





